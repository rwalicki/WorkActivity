<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="WorkActivityDataGridStyle" TargetType="DataGrid" BasedOn="{StaticResource MaterialDesignDataGrid}">
        <Setter Property="IsReadOnly" Value="True"/>
        <Setter Property="AutoGenerateColumns" Value="False"/>
        <Setter Property="Background" Value="#FFFFFF"/>
        <!--<Setter Property="ColumnHeaderStyle" >-->
            
         <!--//>Value="{StaticResource WorkActivityDataGridColumnHeaderStyle}"/>-->
    </Style>

    <Style x:Key="WorkActivityDataGridColumnHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
        <Setter Property="Padding" Value="10"/>
        <Setter Property="TextBlock.FontWeight" Value="Bold"/>
        <Setter Property="TextBlock.Foreground" Value="#673ab7"/>
    </Style>
</ResourceDictionary>